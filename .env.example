# Database Configuration
DB_HOST=localhost
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_NAME=your_database_name
DB_PORT=3306

# Server Configuration
PORT=3000

# Admin Authentication
ADMIN_USERNAME=admin
# Generate password hash by running: node -e "require('bcryptjs').hash('your_password', 10, (e,h) => console.log(h))"
ADMIN_PASSWORD_HASH=your_bcrypt_hashed_password

# JWT Configuration
# Generate secret by running: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here

# Email Configuration (SMTP)
# For Gmail: use smtp.gmail.com, port 587, and an App Password
# For other providers: check their SMTP settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@speedcubingfinland.fi

# Optional: SendGrid API key (recommended on Render if SMTP ports are blocked)
# Sign up at https://sendgrid.com/ and create an API key with "Mail Send" permissions
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM=noreply@speedcubingfinland.fi

# Note for Render: Some cloud hosts restrict outbound SMTP connections on port 25/465/587.
# If you experience Connection timeout errors when sending via SMTP, use SendGrid (set SENDGRID_API_KEY)
